    "typescript": "^5.2.2",
    "prettier": "^3.0.3",
    "eslint": "^8.51.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0"
