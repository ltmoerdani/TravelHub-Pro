{
  "name": "travel-agency-saas",
  "private": true,
  "version": "1.0.0",
  "description": "All-in-One Travel Agency SaaS Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
